{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["github>sourcegraph/renovate-config"],
  "prHourlyLimit": 0,
  "lockFileMaintenance": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "postUpdateOptions": ["yarnDedupeFewer"],
  "masterIssue": true,
  "semanticCommits": false,
  "docker": {
    "enabled": true,
    "pinDigests": true
  }
}
