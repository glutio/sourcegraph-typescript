{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["github>sourcegraph/renovate-config"],
  "prHourlyLimit": 0,
  "lockFileMaintenance": {
    "enabled": false
  },
  "force": {
    "rangeStrategy": "lockfile-update"
  },
  "postUpdateOptions": ["yarnDedupeFewer"],
  "masterIssue": true,
  "schedule": [],
  "semanticCommits": false,
  "docker": {
    "enabled": true,
    "pinDigests": true
  }
}
